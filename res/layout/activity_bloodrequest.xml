<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bag"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="REQUEST"
        android:textColor="#B8B8B8"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <TextView
            android:id="@+id/name_of_patient"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:text="Name Of The Patient"
            android:textColor="#B8B8B8"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_nameofpatient"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/group_top_black"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textColor="#B8B8B8"
            android:textSize="15sp"/>

        <Spinner
            android:id="@+id/spinner_blood_group"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/group_top_black"
            android:entries="@array/blood_group" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/quantity"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:text="Quantity Of Blood"
            android:textColor="#B8B8B8"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/group_top_black"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/hosp"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:text="Hospital"
            android:textColor="#B8B8B8"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_hospital"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/group_top_black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:text="Address"
            android:textColor="#B8B8B8"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/group_top_black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/cont_no"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:text="Contact Number"
            android:textColor="#B8B8B8"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_contact_no"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:background="@drawable/group_top_black" />
    </LinearLayout>

    <Button
        android:id="@+id/bloodreuest_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:background="#B8B8B8"
        android:padding="5dp"
        android:text="Submit"
        android:textColor="#5A3584"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>